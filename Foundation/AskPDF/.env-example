# AskMyPDF Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# MongoDB Configuration (REQUIRED)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net
MONGODB_DATABASE=your_database_name
MONGODB_COLLECTION=your_vectorized_collection_name
MONGODB_CHAT_HISTORY_COLLECTION=chat_history

# Azure OpenAI Base URL (if using Azure OpenAI)
OPENAI_BASE_URL=https://your-resource.openai.azure.com/

# Azure OpenAI API Version
OPENAI_API_VERSION=2025-01-01-preview


# Embedding Model Configuration
EMBEDDING_MODEL=text-embedding-3-small

# Embedding API Configuration (for Azure OpenAI)
OPENAI_EMBDEDDING_MODEL_API_VERSION=2023-05-15
OPENAI_EMBEDDING_BASE_URL=https://your-resource.openai.azure.com/openai/deployments/your-embedding-deployment/embeddings?api-version=2023-05-15

# Chat Model Configuration
CHAT_MODEL=gpt-4o-mini

# =============================================================================
# SERVER CONFIGURATION (Optional)
# =============================================================================

# Server Port
PORT=5001

# Environment Mode
NODE_ENV=development
